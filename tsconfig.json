{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,

    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],

  },
  "include": [
    "src/**/*",
    "src/types/**/*",
    "src/types/global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "scripts/**/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}