{
  "name": "fuelsync-hub",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "build": "echo 'Using simple app.js - no build needed'",
    "start": "node app.js",
    "azure:build": "npm install && npm run build",
    "start:server": "npm run build && node start-server.js",
    "start:direct": "ts-node src/app.ts",
    "dev": "ts-node src/app.ts",
    "db:seed": "ts-node scripts/seed-production.ts",
    "db:migrate": "ts-node scripts/run-migration.ts",
    "db:migrate:all": "ts-node scripts/run-all-migrations.ts",
    "db:migrate:psql": "psql -U postgres -f migrations/001_create_public_schema.sql",
    "seed:production": "ts-node scripts/seed-production.ts",
    "vercel-build": "tsc",
    "migrate:vercel": "node dist/scripts/migrate-vercel.js",
    "seed:vercel": "node dist/scripts/seed-vercel.js",
    "check:db": "ts-node scripts/check-db-users.ts",
    "check:db-connection": "ts-node scripts/check-db-connection.ts",
    "check:server": "node scripts/check-server.js",
    "reset:passwords": "ts-node scripts/reset-passwords.ts",
    "db:init": "node scripts/init-db.js",
    "test:login": "ts-node scripts/test-login.ts",
    "test:api-login": "ts-node scripts/test-api-login.ts",
    "test:simple-login": "node scripts/simple-login-test.js",
    "test:direct-login": "node scripts/direct-login-test.js",
    "frontend:login": "node scripts/frontend-login.js",
    "generate:frontend-login": "ts-node scripts/generate-frontend-login.ts",
    "test:all": "node scripts/run-all-tests.js",
    "start:test": "node scripts/start-and-test.js",
    "test": "cross-env NODE_ENV=test jest --runInBand",
    "test:watch": "npm run test -- --watch",
    "test:db": "cross-env NODE_ENV=test jest --forceExit --detectOpenHandles"
  },
  "dependencies": {
    "@types/cors": "^2.8.19",
    "@vercel/node": "^3.0.0",
    "@vercel/postgres": "^0.10.0",
    "axios": "^1.10.0",
    "cors": "^2.8.5",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.3.1",
    "express": "^4.19.2",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.11.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.3",
    "cross-env": "^7.0.3",
    "@types/node": "^20.8.10"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.21",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/pg": "^8.6.7",
    "@types/supertest": "^2.0.12",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "jest": "^30.0.2",
    "supertest": "^6.3.3",
    "ts-jest": "^29.4.0"
  }
}
